                AND i.hotel_name LIKE
                <if test="dbName == 'oracle'">'%'||#{hotelName}||'%'</if>
                <if test="dbName == 'mssql'">'%'+#{hotelName}+'%'</if>
                <if test="dbName == 'mysql'">concat('%',#{hotelName},'%')</if>
            </if>
            <if test="hotelStar != null">
                AND i.hotel_star = #{hotelStar}
            </if>
        </where>
    </select>

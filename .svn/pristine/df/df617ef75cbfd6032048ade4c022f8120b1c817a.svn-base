                pageSize: 10,//默认显示行数
                pageList: [20, 50, 100, 200],//可选分页数
                singleSelect: false,  //true为单选
                // clickToSelect : true,  //单击选中行
                toolbar: '#toolbar',
                height: 'auto',
                columns: [
                    {
                        checkbox: true // 显示复选框

                    },
                    {
                        field: 'noticeForm',
                        title: '发布时间',
                        halign : 'center',
                        align : 'center',
                        width: '25%',
                        formatter: function(value,row,index){
                            if (value==1){
                                return row.createDate;
                            } else if (value==2){
                             return row.scheduledReleaseTime
                            }
                        }
                    }, {
                        field: 'noticeTitle',
                        title: '标题',
                        halign : 'center',
                        align : 'center'
                    }, {
                        field: 'noticeContent',
                        title: '内容',
                        halign : 'center',
                        align : 'center',
                    }, {
                        field: 'noticeRoll',
                        title: '首页滚动',
                        halign : 'center',
                        align : 'center',
                        formatter: function(value,row,index){
                            var _html=value==1?"是":"否";
                            return _html;
                        }
                    }, {
                        field: 'noticeForm',
                        title: '发送状态',
                        halign : 'center',
                        align : 'center',
                        formatter : function(value, row, index){
                            var myDate = new Date();
                            var oDate1 = new Date(myDate);
                            var oDate2 = new Date(row.scheduledReleaseTime);
                            if(oDate2 < oDate1){
                                value = "已发送";
                            }else{
                                value = "未发送";
                            }

                            return value;
                        }
                    },{
                        field : 'option',
                        title : '操作',
                        halign : 'center',
                        align : 'center',
                        formatter : function(value, row, index){
                            var _html = '<ul class="grid_btn_ul">';
                            var myDate = new Date();
                            var oDate1 = new Date(myDate);
                            var oDate2 = new Date(row.scheduledReleaseTime);
                            if(oDate2 < oDate1){
                                _html += '<li><a href="javascript:editNotice(' + row.id + ')" class="btn btn-success btn-xs"><i class="fa fa-eye"></i> 查看详情 </a></li>';
                                _html += '<li><a href="javascript:delBank(' + row.id + ')" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> 删除 </a></li>';
                                _html += '</ul>';
                            }else{
                                _html += '<li><a href="javascript:editNotice(' + row.id + ')" class="btn btn-success btn-xs"><i class="fa fa-eye"></i> 查看详情 </a></li>';

        //批量删除公告信息
        function batchDel(){
            var idList = [];
            var row = $.map($('#table').bootstrapTable('getSelections'), function (row) {
                idList.push(row.id);
            });
            if (idList.length <= 0) {
                showMsgError("请选择信息");
                return;
            }

            layer.confirm('您确定要删除该信息？',function(){
                parent.loading();
                $.post('[[${ctx}]]/platform/notice/batchDelete',{
                    idList : idList.toString()
                },function(result){
                    closeLoading();
                    layer.closeAll();
                    if(result.success){

        //公告删除
        function delBank(id){
            layer.confirm('您确定要删除该信息吗？',function(){
                parent.loading();
                $.post('[[${ctx}]]/platform/notice/delete',{
                    id : id
                },function(result){
                    closeLoading();
                    layer.closeAll();
                    if(result.success){
                        showMsgSuccess('删除成功');

                        refreshTable();
                    }else{
                        showMsgError(result.msg);
                    }
                },'json');
            });

        }

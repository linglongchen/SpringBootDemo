<!DOCTYPE html>
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
    <title>商品创建</title>

    <head th:include="init :: init"></head>
    <head th:include="init_bootstrap_table :: bootstrap_table"></head>

    <script type="text/javascript">
        $(function(){
            $('#table').bootstrapTable({
                undefinedText : '',//defined的默认显示文本
                striped : true,//条纹
                method : 'get',
                url : '[[${ctx}]]/shopinfo/productCreate/list',
                pagination : true,//显示分页
                sidePagination : 'server',//定义分页为服务器端分页
                pageNumber : 1,//起始页数
                pageSize : 20,//默认显示行数
                pageList : [20, 50, 100 ,200],//可选分页数
                singleSelect : false,//多选
                //toolbar : '#toolbar',
                height : 'auto',
                columns: [
                    {
                        checkbox: true
                    },
                    {
                        field: 'goodsPic',
                        title: '商品图',
                        halign : 'center',
                        align : 'center',
                        formatter : function(value, row, index){
                            var pic = value.split(",");
                            return '<img style="width: 96px;" src='+pic[0]+'>'
                        }
                    },
                    {
                        field: 'goodsName',
                        title: '商品名',
                        halign : 'center',
                        align : 'center'
                    },{
                        field: 'goodsPrice',
                        title: '价格',
                        halign : 'center',
                        align : 'center'
                    },{
                        field: 'goodsNum',
                        title: '数量',
                        halign : 'center',
                        align : 'center'
                     },
                    {
                         field: 'serviceMode',
                         title: '服务方式',
                         halign : 'center',
                        align : 'center',
                     },
                    {
                        field: 'stock',
                        title: '库存状态',
                        halign : 'center',
                        align : 'center',
                        formatter : function(value, row, index){
                            if (row.stock == 1){
                                return "售罄";
                            }else {
                                return "有货";
                            }
                        }
                    },{
                        field: 'status',
                        title: '状态',
                        halign : 'center',
                        align : 'center',
                        formatter : function(value, row, index){
                            if (row.status == 0){
                                return "未上架";
                            }else {
                                return "已上架";
                            }
                        }
                    },{
                        field : 'option',
                        title : '操作',
                        halign : 'center',
                        align : 'left',
                        formatter : function(value, row, index){
                            var _html = '<ul class="grid_btn_ul">';
                            if (row.status == 0){
                                _html += '<li><a href="javascript:upper(' + row.id + ',1)" class="btn btn-success btn-xs"><i class="fa fa-pencil"></i> 上架 </a></li>';
                            }else {
                                _html += '<li><a href="javascript:upper(' + row.id + ',0)" class="btn btn-success btn-xs"><i class="fa fa-pencil"></i> 下架 </a></li>';
                            }
                            _html += '<li><a href="javascript:editProductCreate(' + row.id + ')" class="btn btn-success btn-xs"><i class="fa fa-pencil"></i> 编辑 </a></li>';
                            _html += '<li><a href="javascript:ProductCreate(' + row.id + ')" class="btn btn-success btn-xs"><i class="fa fa-pencil"></i> 查看详情 </a></li>';
                            _html += '<li><a href="javascript:delProductCreate(' + row.id + ')" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> 删除 </a></li>';
                            _html += '</ul>';
                            return _html;
                        }
                    }],
                onLoadSuccess : function(data){
                    if(data.total == 0){
                        $('#table').bootstrapTable('removeAll');
                    }
                    //禁止bootstrap table中的checkbox加载layui样式
                    $('.table .bs-checkbox input').each(function () {
                        $(this).attr("lay-ignore", "true");
                    });
                    $('.table thead .bs-checkbox .th-inner .layui-form-checkbox').remove();
                }
            });
        });

        //单件商品上下架
        function upper(id,status){
            var idList = [];
            idList.push(id);
            layer.confirm('您确定要更改该商品上下架的状态？',function(){
                parent.loading();
                $.post('[[${ctx}]]/shopinfo/productCreate/framesStatus',{
                    idList : idList.toString(),
                    status :status
                },function(result){
                    closeLoading();
                    layer.closeAll();
                    if(result.success){
                        showMsgSuccess('更改状态成功');

                        refreshTable();
                    }else{
                        showMsgError(result.msg);
                    }
                },'json');
            });
        }



        //删除商品
        function delProductCreate(id){
            layer.confirm('您确定要删除该商品吗？',function(){
                parent.loading();
                $.post('[[${ctx}]]/shopinfo/productCreate/delProductCreate',{
                    id : id
                },function(result){
                    closeLoading();
                    layer.closeAll();
                    if(result.success){
                        showMsgSuccess('删除成功');

                        refreshTable();
                    }else{
                        showMsgError(result.msg);
                    }
                },'json');
            });
        }

        //查询
        function search(){
            var param = $('#searchForm').serialize();
            $('#table').bootstrapTable('refresh', {url : '[[${ctx}]]/shopinfo/productCreate/list?' + param});
        }




        //添加商品
        function addProductCreate(){
            layer.open({
                type: 2,
                title : '新增商品',
                area : ['85%','90%'],
                content: '[[${ctx}]]/shopinfo/productCreate/form', //这里content是一个DOM
                btn : ['保存', '关闭'],
                closeBtn : '1',
                shadeClose : false,//点击遮罩层关闭
                shade : [0.8, '#393D49'],
                yes : function(index, layero){
                    var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                    iframeWin.validForm();
                },btn2 : function(index, layero){
                    layer.confirm('关闭或退出不会对您的编辑操作进行保存！',{icon:"3",title:"提示"},function(index1){
                        layer.close(index1);
                        layer.close(index);
                        var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                        iframeWin.btn2From();
                        return true;
                    });
                    return false;
                },cancel : function(index, layero) {
                    layer.confirm('关闭或退出不会对您的编辑操作进行保存！',{icon:"3",title:"提示"},function(index1){
                        layer.close(index1);
                        layer.close(index);
                        var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                        iframeWin.cancelFrom();
                        return true;
                    });
                    return false;
                }
            });
        }

        //编辑商品
        function editProductCreate(id){
            layer.open({
                type: 2,
                title : '编辑商品',
                area : ['85%','90%'],
                content: '[[${ctx}]]/shopinfo/productCreate/form?id=' + id, //这里content是一个DOM
                btn : ['保存', '关闭'],
                closeBtn : '1',
                shadeClose : false,//点击遮罩层关闭
                shade : [0.8, '#393D49'],
                yes : function(index, layero){
                    var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                    iframeWin.validForm();
                },btn2 : function(index, layero){
                    layer.confirm('关闭或退出不会对您的编辑操作进行保存！',{icon:"3",title:"提示"},function(index1){
                        layer.close(index1);
                        layer.close(index);
                        var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                        iframeWin.btn2From();
                        return true;
                    });
                    return false;
                },cancel : function(index, layero) {
                    layer.confirm('关闭或退出不会对您的编辑操作进行保存！',{icon:"3",title:"提示"},function(index1){
                        layer.close(index1);
                        layer.close(index);
                        var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                        iframeWin.cancelFrom();
                        return true;
                    });
                    return false;
                }
            });
        }




        //查看详情
        function ProductCreate(id){
            layer.open({
                type: 2,
                title : '编辑商品',
                area : ['85%','90%'],
                content: '[[${ctx}]]/shopinfo/productCreate/form?id=' + id, //这里content是一个DOM
                btn : ['保存', '关闭'],
                closeBtn : '1',
                shadeClose : false,//点击遮罩层关闭
                shade : [0.8, '#393D49'],
                yes : function(index, layero){
                    var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                    iframeWin.validForm();
                },btn2 : function(index, layero){
                    layer.confirm('关闭或退出不会对您的编辑操作进行保存！',{icon:"3",title:"提示"},function(index1){
                        layer.close(index1);
                        layer.close(index);
                        var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                        iframeWin.btn2From();
                        return true;
                    });
                    return false;
                },cancel : function(index, layero) {
                    layer.confirm('关闭或退出不会对您的编辑操作进行保存！',{icon:"3",title:"提示"},function(index1){
                        layer.close(index1);
                        layer.close(index);
                        var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                        iframeWin.cancelFrom();
                        return true;
                    });
                    return false;
                }
            });
        }


        //批量删除
        function batchDel(){
            var idList = [];
            var row = $.map($('#table').bootstrapTable('getSelections'), function (row) {
                idList.push(row.id);
            });
            if (idList.length <= 0) {
                showMsgError("请选择商品");
                return;
            }

            layer.confirm('您确定要删除该商品？',function(){
                parent.loading();
                $.post('[[${ctx}]]/shopinfo/productCreate/framesDelGoods',{
                    idList : idList.toString()
                },function(result){
                    closeLoading();
                    layer.closeAll();
                    if(result.success){
                        showMsgSuccess('删除成功');

                        refreshTable();
                    }else{
                        showMsgError(result.msg);
                    }
                },'json');
            });
        }


        //批量上下架商品
        function upperList(status){
            var idList = [];
            var row = $.map($('#table').bootstrapTable('getSelections'), function (row) {
                idList.push(row.id);
            });
            if (idList.length <= 0) {
                showMsgError("请选择商品");
                return;
            }

            layer.confirm('您确定要更改该商品上下架的状态？',function(){
                parent.loading();
                $.post('[[${ctx}]]/shopinfo/productCreate/framesStatus',{
                    idList : idList.toString(),
                    status :status
                },function(result){
                    closeLoading();
                    layer.closeAll();
                    if(result.success){
                        showMsgSuccess('更改状态成功');

                        refreshTable();
                    }else{
                        showMsgError(result.msg);
                    }
                },'json');
            });
        }
    </script>
    <style type="text/css">
        .layui-form input[type="checkbox"]{
            display: block;
        }
    </style>
</head>
<body layadmin-themealias="default">
<div th:replace="head :: myfooter"></div>
<div class="layui-fluid animated fadeInRight">
    <div class="layui-card">
        <div class="layui-form layui-card-header layuiadmin-card-header-auto">
            <div class="layui-form-item form-head">
                <form id="searchForm" class="layui-form">
                    <div class="layui-inline">
                        <div class="layui-input-inline">
                            <input type="text" name="goodsName" autocomplete="off" placeholder="请输入商品名" class="layui-input">
                        </div>
                    </div>

                    <div class="layui-inline">
                        <div class="layui-input-inline">
                            <button class="btn btn-primary " type="button" onclick="search()"><i class="fa fa-search"></i>&nbsp;查询</button>
                        </div>
                    </div>
                    <div class="layui-card-body">
                        <button class="btn btn-primary " type="button" data-toggle="modal" onclick="addProductCreate()"><i class="fa fa-plus"></i>&nbsp;新增</button>
                        <button class="btn btn-primary " type="button" data-toggle="modal" onclick="batchDel()"><i class="fa fa-del"></i>&nbsp;批量删除</button>
                        <button class="btn btn-primary " type="button" data-toggle="modal" onclick="upperList(1)"><i class="fa fa-plus"></i>&nbsp;上架</button>
                        <button class="btn btn-primary " type="button" data-toggle="modal" onclick="upperList(0)"><i class="fa fa-plus"></i>&nbsp;下架</button>
                    </div>
                </form>
            </div>
            <table id="table">

            </table>
        </div>
    </div>
</div>
</body>
</html>

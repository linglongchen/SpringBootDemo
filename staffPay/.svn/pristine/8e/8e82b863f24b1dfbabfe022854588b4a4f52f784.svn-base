<script type="text/javascript">
$(".fold-title").on("mouseenter", "span", function() {
    var n = $(this).index();
    n++;
    $(this).addClass('flat');
    if ((n % 2 == 0)) {
        $(this).prev().addClass('flat');
    } else {
        if (!$(this).hasClass('last')) {
            $(this).next().addClass('flat');
        }
    }
});
$(".fold-title").on("mouseleave", "span", function() {
    $('.flat').removeClass('flat');
});
</script>

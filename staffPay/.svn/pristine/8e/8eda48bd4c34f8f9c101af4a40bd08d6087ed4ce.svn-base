<!DOCTYPE html>
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
    <title>意见与建议</title>

    <head th:include="init :: init"></head>
    <head th:include="init_bootstrap_table :: bootstrap_table"></head>

    <script type="text/javascript">
        $(function(){
            $('#table').bootstrapTable({
                undefinedText : '',//defined的默认显示文本
                striped : true,//条纹
                method : 'get',
                url : '[[${ctx}]]/mine/opinions/list',
                pagination : true,//显示分页
                sidePagination : 'server',//定义分页为服务器端分页
                pageNumber : 1,//起始页数
                pageSize : 20,//默认显示行数
                pageList : [20, 50, 100 ,200],//可选分页数
                singleSelect : false,//多选
                //toolbar : '#toolbar',
                height : 'auto',
                columns: [
                    {
                        field: 'feedbackRoom',
                        title: '激活房间号',
                        halign : 'center',
                        align : 'center'
                    },{
                        field: 'name',
                        title: '投诉类型',
                        halign : 'center',
                        align : 'center'
                    },{
                        field: 'departmentNames',
                        title: '投诉对象',
                        halign : 'center',
                        align : 'center',
                        formatter: function(value,row,index){
                           if (value == null) {
                               return "所有部门";
                           }else {
                               return value;
                           }
                        }
                    },{
                        field: 'complaintContent',
                        title: '投诉内容',
                        halign : 'center',
                        align : 'center'
                    },{
                        field: 'isFeedback',
                        title: '是否需要反馈处理',
                        halign : 'center',
                        align : 'center',
                        formatter: function(value,row,index){
                            if(row.isFeedback==1){
                                return "是 ";
                            }else if(row.isFeedback==2){
                                return "否";
                            }
                        }
                    },{
                        field: 'contactInformation',
                        title:'手机号',
                        halign : 'center',
                        align : 'center',
                        width:"100px",
                        formatter: function(value,row,index){
                            if(row.feedbackMode == 1){
                                return row.contactInformation;
                            }else if(row.feedbackMode ==2){
                                return"暂无";
                            }else if (row.feedbackMode ==0){
                                return"暂无";
                            }
                        }
                    },{
                        field: 'contactInformation',
                        title:'邮箱',
                        halign : 'center',
                        align : 'center',
                        width:"100px",
                        formatter: function(value,row,index) {
                            if (row.feedbackMode == 2) {
                                return row.contactInformation;
                            } else {
                                return "暂无";
                            }
                        }
                    },{
                        field : 'option',
                        title : '操作',
                        halign : 'center',
                        align : 'center',
                        formatter : function(value, row, index){
                            var _html = '<ul class="grid_btn_ul">';
                            _html += '<li><a href="javascript:editNotice(' + row.id + ')" class="btn btn-success btn-xs"><i class="fa fa-pencil"></i> 查看详情 </a></li>';
                            _html += '</ul>';
                            return _html;
                        }
                    }],
                               onLoadSuccess : function(data){
                    if(data.total == 0){
                        $('#table').bootstrapTable('removeAll');
                    }
                }
            });
        });





        //查看详情
        function editNotice(id){
            layer.open({
                type: 2,
                title : '查看详情',
                area : ['60%','90%'],
                content: '[[${ctx}]]/mine/opinions/form?id=' + id , //这里content是一个DOM
                btn : ['关闭'],
                closeBtn : '1',
                shadeClose : true,//点击遮罩层关闭
                shade : [0.8, '#393D49'],
                yes : function(index, layero){
                    var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                    layer.closeAll('iframe');
                }
            });
        }

        //查询
        function search(){
            var param = $('#searchForm').serialize();
            $('#table').bootstrapTable('refresh', {url : '[[${ctx}]]/mine/opinions/list?' + param});
        }

        //查看曲线图
        function look(){
            layer.open({
                type: 2,
                area : ['90%','85%'],
                content: '[[${ctx}]]/mine/opinions/index1', //这里content是一个DOM
                btn : ['关闭'],
                closeBtn : '1',
                shadeClose : true,//点击遮罩层关闭
                shade : [0.8, '#393D49'],
                yes : function(index, layero){
                    var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                    layer.closeAll('iframe');
                }
            });
        }

        //用户投诉类别设置
        function editFeed(){
            layer.open({
                type: 2,
                area : ['60%','90%'],
                content: '[[${ctx}]]/install/feedback/index2', //这里content是一个DOM
                btn : ['关闭'],
                closeBtn : '1',
                shadeClose : true,//点击遮罩层关闭
                shade : [0.8, '#393D49'],
                yes : function(index, layero){
                    var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                    layer.closeAll('iframe');
                }
            });
        }


    </script>

</head>
<body layadmin-themealias="default">
<div class="layui-fluid animated fadeInRight">
    <div class="layui-card">
        <div class="layui-form layui-card-header layuiadmin-card-header-auto">
            <div class="layui-form-item form-head">
                <form id="searchForm" class="layui-form">
                    <div class="layui-inline">
                        <div class="layui-input-inline">
                            <select id="departmentList" name="objectId" data-placeholder="请选择投诉对象" class="chosen-select-deselect form-control layui-input">
                                <option></option>
                                <option th:each="departmentList:${departmentList }" th:value="${departmentList.id }" th:text="${departmentList.departmentName }"></option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-inline">
                        <div class="layui-input-inline">
                            <select id="feedbackType" name="complaintsType" data-placeholder="请选择投诉类型" class="chosen-select-deselect form-control layui-input">
                                <option></option>
                                <option th:each="list:${list }" th:value="${list.id }" th:text="${list.name }"></option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-inline">
                        <div class="layui-input-inline">
                            <select id="isFeedback" name="isFeedback" data-placeholder="请选择是否需要反馈" class="chosen-select-deselect form-control layui-input">
                                <option></option>
                                <option value="1">需要反馈</option>
                                <option value="2">不需要反馈</option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-inline">
                        <button class="btn btn-primary " type="button" onclick="search()"><i class="fa fa-search"></i>&nbsp;筛选</button>
                    </div>
                    <div class="layui-inline">
                        <button class="btn btn-primary " type="button" onclick="look()">查看曲线图</button>
                    </div>
                    <div class="layui-inline">
                        <button class="btn btn-primary " type="button" onclick="editFeed()">用户投诉类别设置</button>
                    </div>
                </form>
            </div>

            <table id="table">

            </table>
        </div>
    </div>
</div>
</body>
</html>

<!DOCTYPE html>
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
	<title>在线商家购买成功</title>

	<head th:include="init :: init"></head>
	<head th:include="init_bootstrap_table :: bootstrap_table"></head>

	<script type="text/javascript">
        $(function(){
            $('#table').bootstrapTable({
                undefinedText : '',//defined的默认显示文本
                striped : true,//条纹
                method : 'get',
                url : '[[${ctx}]]/advertisingorder/advertisingOrder/shoppingSuccessList?type=1',
                pagination : true,//显示分页
                sidePagination : 'server',//定义分页为服务器端分页
                pageNumber : 1,//起始页数
                pageSize : 20,//默认显示行数
                pageList : [20, 50, 100 ,200],//可选分页数
                singleSelect : false,//多选
                //toolbar : '#toolbar',
                height : 'auto',
                columns: [
               {
                        field: 'transactionodersn',
                        title: '交易订单编号',
                        halign : 'center',
                        align : 'center'
                    },{
                        field: 'ordernumber',
                        title: '订单编号',
                        halign : 'center',
                        align : 'center'
                    },{
                        field: 'createDate',
                        title: '创建时间',
                        halign : 'center',
                        align : 'center'
                    },{
                        field: 'paymentDate',
                        title: '付款时间',
                        halign : 'center',
                        align : 'center'

                    },{
                        field: 'putInTime',
                        title: '发布时间',
                        halign : 'center',
                        align : 'center'
                    },{
                        field: 'account',
                        title: '操作员',
                        halign : 'center',
                        align : 'center'
                    },{
                        field : 'option',
                        title : '操作',
                        halign : 'center',
                        align : 'left',
                        formatter : function(value, row, index){
                            var _html = '<ul class="grid_btn_ul">';
                            _html += '<li><a href="javascript:info('+row.id+');" class="btn btn-success btn-xs"> 详情 </a></li>';
                              _html += '</ul>';
                            return _html;
                        }
                    }],
                onLoadSuccess: function (data) {
                    if (data.total == 0) {
                        $('#table').bootstrapTable('removeAll');
                    }
                }
            });
        });



        function info(id){
            layer.open({
                type: 2,
                title : '详情',
				area : ['60%','90%'],
                content: '[[${ctx}]]/advertisingorder/advertisingOrder/purchaseSuccessInfo?id='+id, //这里content是一个DOM
                btn : [ '关闭'],
                closeBtn : '1',
                shadeClose : true,//点击遮罩层关闭
                shade : [0.8, '#393D49'],
                yes : function(index, layero){
                    var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                    layer.closeAll('iframe');
                }
            });
        }



	</script>
</head>
<body layadmin-themealias="default">
<div th:replace="head :: myfooter"></div>
<div class="layui-fluid animated fadeInRight">
	<div class="layui-card">
		<div class="layui-form layui-card-header layuiadmin-card-header-auto">
			<table id="table">

			</table>
		</div>
	</div>
</div>
</body>
</html>

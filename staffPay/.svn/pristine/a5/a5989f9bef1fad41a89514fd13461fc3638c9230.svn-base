<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chunqiu.mrjuly.modules.system.dao.RoleMenuDao">
    
	<sql id="roleMenuColumns">
		a.role_id AS "roleId",
		a.menu_id AS "menuId"
	</sql>
	
	<sql id="roleMenuJoins">
	</sql>
    
	<select id="get" resultType="RoleMenu">
		SELECT 
			<include refid="roleMenuColumns"/>
		FROM admin_role_menu a
		<include refid="roleMenuJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="RoleMenu">
		SELECT 
			<include refid="roleMenuColumns"/>
		FROM admin_role_menu a
		<include refid="roleMenuJoins"/>
		<where>
			
		</where>
		<choose>
			<when test="orderBy != null and orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="RoleMenu">
		SELECT 
			<include refid="roleMenuColumns"/>
		FROM admin_role_menu a
		<include refid="roleMenuJoins"/>
		<where>
			<if test="menuId !=null ">
				AND a.menu_id=#{menuId}
			</if>
		</where>		
		<choose>
			<when test="orderBy != null and orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO admin_role_menu(
			role_id,
			menu_id
		) VALUES (
			#{roleId},
			#{menuId}
		)
	</insert>
	
	<update id="update">
		UPDATE admin_role_menu 
		<set> 	
			<if test="roleId != null">
				role_id = #{roleId},
			</if>
			<if test="menuId != null">
				menu_id = #{menuId},
			</if>
		</set>
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		DELETE FROM admin_role_menu
		WHERE id = #{id}
	</update>
	
</mapper>
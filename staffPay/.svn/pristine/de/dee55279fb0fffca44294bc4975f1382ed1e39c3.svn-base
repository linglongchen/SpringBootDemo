<!DOCTYPE html>
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
	<title>优惠券管理管理</title>

	<head th:include="init :: init"></head>
    <head th:include="init_bootstrap_table :: bootstrap_table"></head>

	<script type="text/javascript">
		$(function(){
			$('#table').bootstrapTable({
				undefinedText : '',//defined的默认显示文本
				striped : true,//条纹
				method : 'get',
				url : '[[${ctx}]]/install/coupon/list',
				pagination : true,//显示分页
				sidePagination : 'server',//定义分页为服务器端分页
				pageNumber : 1,//起始页数
				pageSize : 20,//默认显示行数
				pageList : [20, 50, 100 ,200],//可选分页数
				singleSelect : false,//多选
				//toolbar : '#toolbar',
				height : 'auto',
			    columns: [
			    {
			        field: 'preferentialQuota',
			        title: '广告优惠额度',
			        halign : 'center',
			        align : 'center',
                    formatter : function(value, row, index){
                 		value = value + "天免费";
                 		return value;
                    }
			    },{
					field: 'closingDate',
					title: '有效期',
					halign : 'center',
					align : 'center'
				},{
			    	field : 'option',
			    	title : '操作',
			    	halign : 'center',
			    	align : 'center',
			    	formatter : function(value, row, index){
			    		var _html = '<ul class="grid_btn_ul">';
                        _html += '<li><a href="javascript:editDict(' + row.id + ')" class="btn btn-success btn-xs"><i class="fa fa-pencil"></i> 分配 </a></li>';
			    		_html += '<li><a href="javascript:delBank(' + row.id + ')" class="btn btn-danger btn-xs"><i class="fa fa-pencil"></i> 删除 </a></li>';
			    		_html += '</ul>';
			    		return _html;
			    	}
			    }],
			    onLoadSuccess : function(data){
			    	if(data.total == 0){
			    		$('#table').bootstrapTable('removeAll');
			    	}
			    }
			});
		});

		//添加优惠券信息
		function add(){
			layer.open({
			    type: 2,
			    title : '新增优惠券信息',
				area: ['60%', '90%'],
			    content: '[[${ctx}]]/install/coupon/form', //这里content是一个DOM
			    btn : ['保存', '关闭'],
			    closeBtn : '1',
			    shadeClose : false,//点击遮罩层关闭
			    shade : [0.8, '#393D49'],
			    yes : function(index, layero){
			        var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
			        iframeWin.validForm();
			    },btn2 : function(index, layero){
					exitBombSow(index);
					return false;
				},cancel : function(index, layero) {
					exitBombSow(index);
					return false;
				}
			});
		}

		//删除信息
		function delBank(id){
			layer.confirm('您确定要删除该优惠券的信息吗？',function(){
				parent.loading();
				$.post('[[${ctx}]]/install/coupon/delCoupon',{
					id : id
				},function(result){
					closeLoading();
					layer.closeAll();
					if(result.success){
						showMsgSuccess('删除成功');

						refreshTable();
					}else{
						showMsgError(result.msg);
					}
				},'json');
			});
		}

        //编辑使用说明
        function search(){
            layer.open({
                type: 2,
                title : '编辑使用说明',
				area: ['60%', '90%'],
                content: '[[${ctx}]]/install/coupon/edit', //这里content是一个DOM
                btn : ['保存','关闭'],
                closeBtn : '1',
                shadeClose : false,//点击遮罩层关闭
                shade : [0.8, '#393D49'],
                yes : function(index, layero){
                    var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                    iframeWin.validForm();
                },btn2 : function(index, layero){
					exitBombSow(index);
					return false;
				},cancel : function(index, layero) {
					exitBombSow(index);
					return false;
				}
            });
        }

        //分配
        function editDict(id){
            layer.open({
                type: 2,
				area: ['60%', '90%'],
                content: '[[${ctx}]]/install/coupon/userIndex?id=' + id, //这里content是一个DOM
                btn : ['分配', '关闭'],
                closeBtn : '1',
                shadeClose : false,//点击遮罩层关闭
                shade : [0.8, '#393D49'],
                yes : function(index, layero){
                    var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                    iframeWin.validForm();
                },btn2 : function(index, layero){
					exitBombSow(index);
					return false;
				},cancel : function(index, layero) {
					exitBombSow(index);
					return false;
				}
            });
        }

	</script>
</head>
<body layadmin-themealias="default">
	<div class="layui-fluid animated fadeInRight">
        <div class="layui-card">
        	<div class="layui-form layui-card-header layuiadmin-card-header-auto">
                <div class="layui-form-item form-head">
					<form id="searchForm" class="layui-form">
						<div class="layui-inline">
							<button class="btn btn-primary " type="button" onclick="search()"><i class="fa fa-pencil"></i>&nbsp;编辑使用说明</button>
							<button style="margin-left: 2rem" class="btn btn-primary " type="button" data-toggle="modal" onclick="add()"><i class="fa fa-plus"></i>&nbsp;新增</button>
						</div>
					</form>
				</div>

				<table id="table">

				</table>
	        </div>
		</div>
    </div>
</body>
</html>

                    {
                        field: "status",
                        checkbox: true,
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (value == 0) {
                                return {
                                    disabled: false//设置可选
                                };
                            } else if (value == 1) {
                                return {
                                    disabled: true//设置不可选
                                };
                            }

<!DOCTYPE html>
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
    <title>广告商管理管理</title>

    <head th:include="init :: init"></head>

    <script type="text/javascript">

        //提交表单
        function validForm(){
            $('#signupForm').validate({
                submitHandler:function(form){
                    loading();
                    form.action = '[[${ctx}]]/shopinfo/shopInfo/saveFreeze';
                    form.submit();
                }
            });
            $('#signupForm').submit();
        }
    </script>
</head>
<body class="gray-bg">
<div class="wrapper animated fadeInRight">
    <div class="ibox-content">
        <div class="row">
            <form id="signupForm" class="layui-form form-horizontal m-t">
                <input type="hidden" name="id" th:value="${shopInfo.id}">
                <input type="hidden" name="shopIds" th:value="${shopInfo.shopIds}">
                <input type="hidden" name="status" th:value="${shopInfo.status}">
                <div class="layui-form-item col-lg-6 col-sm-12 col-xs-12">
                    <label class="col-xs-3 layui-form-label">冻结原因：</label>
                    <div class="col-xs-6">
                        <textarea name="freezeReason" class="layui-textarea"  placeholder="请输入冻结原因"  ></textarea>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>
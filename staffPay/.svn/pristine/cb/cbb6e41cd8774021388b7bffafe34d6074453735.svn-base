<!DOCTYPE html>
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
    <title>广告商我的账单</title>

    <head th:include="init :: init"></head>
    <head th:include="init_bootstrap_table :: bootstrap_table"></head>

    <script type="text/javascript">
        $(function () {
            $('#table').bootstrapTable({
                undefinedText: '',//defined的默认显示文本
                striped: true,//条纹
                method: 'get',
                url: '[[${ctx}]]/mybill/myBillInfo/list2',
                pagination: true,//显示分页
                sidePagination: 'server',//定义分页为服务器端分页
                pageNumber: 1,//起始页数
                pageSize: 20,//默认显示行数
                pageList: [20, 50, 100, 200],//可选分页数
                singleSelect: false,//多选
                //toolbar : '#toolbar',
                height: 'auto',
                columns: [
                    {
                        field: 'ordernumber',
                        title: '单号',
                        halign: 'center',
                        align: 'center',
                        formatter:function (value,row,index) {
                           if (value != null){
                               return value;
                           }else {
                               return "暂无单号";
                           }
                        }
                    }, {
                        field: 'status',
                        title: '消费内容',
                        halign: 'center',
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (value == 1) {
                                return "广告投放";
                            } else if (value == 2) {
                                return "退款";
                            } else if (value == 3) {
                                return "充值";
                            } else if (value == 4) {
                                return "扣款(租金)";
                            } else {
                                return "扣款(其他)";
                            }
                        }
                    }, {
                        field: 'amountPrice',
                        title: '消费金额',
                        halign: 'center',
                        align: 'center',
                        formatter: function (value, row, index) {
                            if (row.status == 3) {
                                return '<li style="color: green">+' + value + '</li>'
                            } else if (row.status == 4 || row.status == 5) {
                                return '<li style="color: red"> - ' + value + '</li>'
                            } else if (row.status == 1) {
                                return '<li style="color: red"> - ' + value + '</li>'
                            } else {
                                return '<li style="color: green">+' + value + '</li>'
                            }
                        }
                    }, {
                        field: 'createDate',
                        title: '消费时间',
                        halign: 'center',
                        align: 'center'
                    }, {
                        field: 'userName',
                        title: "操作人",
                        halign: 'center',
                        align: 'center'
                    }, {
                        field: 'remarks',
                        title: '备注',
                        halign: 'center',
                        align: 'center'
                    }],
                onLoadSuccess: function (data) {
                    if (data.total == 0) {
                        $('#table').bootstrapTable('removeAll');
                    }
                }
            });
        });

        //添加我的账单
        function addMyBillInfo() {
            layer.open({
                type: 2,
                title: '新增我的账单',
                area : ['60%','90%'],
                content: '[[${ctx}]]/mybill/myBillInfo/form', //这里content是一个DOM
                btn: ['保存', '关闭'],
                closeBtn: '1',
                shadeClose: false,//点击遮罩层关闭
                shade: [0.8, '#393D49'],
                yes: function (index, layero) {
                    var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                    iframeWin.validForm();
                },btn2 : function(index, layero){
                    exitBombSow(index);
                    return false;
                },cancel : function(index, layero) {
                    exitBombSow(index);
                    return false;
                }
            });
        }

        //编辑我的账单
        function editMyBillInfo(id) {
            layer.open({
                type: 2,
                title: '编辑我的账单',
                area : ['60%','90%'],
                content: '[[${ctx}]]/mybill/myBillInfo/form?id=' + id, //这里content是一个DOM
                btn: ['保存', '关闭'],
                closeBtn: '1',
                shadeClose: false,//点击遮罩层关闭
                shade: [0.8, '#393D49'],
                yes: function (index, layero) {
                    var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                    iframeWin.validForm();
                },btn2 : function(index, layero){
                    exitBombSow(index);
                    return false;
                },cancel : function(index, layero) {
                    exitBombSow(index);
                    return false;
                }
            });
        }

        //删除我的账单
        function delMyBillInfo(id) {
            layer.confirm('您确定要删除该我的账单吗？', function () {
                parent.loading();
                $.post('[[${ctx}]]/mybill/myBillInfo/delMyBillInfo', {
                    id: id
                }, function (result) {
                    closeLoading();
                    layer.closeAll();
                    if (result.success) {
                        showMsgSuccess('删除成功');
                        refreshTable();
                    } else {
                        showMsgError(result.msg);
                    }
                }, 'json');
            });
        }

        //查询
        function search() {
            var param = $('#searchForm').serialize();
            $('#table').bootstrapTable('refresh', {url: '[[${ctx}]]/mybill/myBillInfo/list2?' + param});
        }
    </script>
</head>
<body layadmin-themealias="default">
<div th:replace="head :: myfooter"></div>
<div class="layui-fluid animated fadeInRight">
    <div class="layui-card">
        <div class="layui-form layui-card-header layuiadmin-card-header-auto">
            <div class="layui-form-item form-head">
                <form id="searchForm" class="layui-form">
                    <div class="layui-inline">
                        <div class="layui-input-inline">
                            <input name="createByName" autocomplete="off" class="layui-input" placeholder="操作人"
                                   type="text">
                        </div>
                    </div>
                    <div class="layui-inline">
                        <div class="layui-input-inline">
                            <input name="remittanceFlowNumber" autocomplete="off" class="layui-input" placeholder="流水号"
                                   type="text">
                        </div>
                    </div>
                    <div class="layui-inline">
                        <button class="btn btn-primary " type="button" onclick="search()"><i class="fa fa-search"></i>&nbsp;查询
                        </button>
                    </div>
                    <div class="layui-inline">
                        <div class="layui-input-inline">
                            <select name="timeStatus" class="chosen-select-deselect form-control layui-input"
                                    onchange="search()">
                                <option value="">消费时间</option>
                                <option th:value="1">升序</option>
                                <option th:value="0">降序</option>
                            </select>
                        </div>
                    </div>
                    <div class="layui-inline">
                        <div class="layui-input-inline">
                            <select name="status" class="chosen-select-deselect form-control layui-input"
                                    onchange="search()">
                                <option value="">消费内容</option>
                                <option th:value="2">退款</option>
                                <option th:value="3">充值</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <table id="table">

            </table>
        </div>
    </div>
</div>
</body>
</html>
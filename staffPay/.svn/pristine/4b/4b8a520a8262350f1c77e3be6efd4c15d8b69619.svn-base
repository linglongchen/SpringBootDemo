<!DOCTYPE html>
<html lang="en" xmlns:th="http://www.thymeleaf.org">
<head>
    <title>在线商家内容匹配</title>

    <head th:include="init :: init"></head>

    <script type="text/javascript">

        //提交表单
        function validForm() {
            var url = $('#advertisingUrl').val();
            var reg = /^([hH][tT]{2}[pP]:\/\/|[hH][tT]{2}[pP][sS]:\/\/)(([A-Za-z0-9-~]+)\.)+([A-Za-z0-9-~\/])+$/;
            if (!reg.test(url)) {
                showMsgError("这网址不是以http://https://开头，请重新输入！");
                return false;
            } else {
                $('#signupForm').validate({
                    submitHandler: function (form) {
                        loading();
                        form.action = '[[${ctx}]]/advertisingorder/advertisingOrder/uploadTest2';
                        form.submit();
                    }
                });
                $('#signupForm').submit();
                closeLoading();
                layer.closeAll();
            }
        }

        $(function () {
            if ($('#success').val() == 1) {
                showMsgSuccess("上传成功");
            }


            $('#num2').hide();
            $('.num5').hide();
            if ($('#num').val()!=null && $('#num').val()!=""){
                $('#num2').show();
                $('.num5').hide();
            }else{
                $('#num2').hide();
                $('.num5').show();
                $('#id1').removeAttr("name");
            }
        })


        function getAdType(){
            layer.open({
                type: 2,
                title : '三级菜单',
                area : ['60%','90%'],
                content: '[[${ctx}]]/hotelinfo/hotelInfo/menuIndex2', //这里content是一个DOM
                btn : ['保存','关闭'],
                closeBtn : '2',
                shadeClose : false,//点击遮罩层关闭
                shade : [0.8, '#393D49'],
                yes : function(index, layero){
                    var iframeWin = window[layero.find('iframe')[0]['name']]; //得到iframe页的窗口对象，执行iframe页的方法：iframeWin.method();
                    iframeWin.validForm();
                },btn2 : function(index, layero){
                    exitBombSow(index);
                    return false;
                },cancel : function(index, layero) {
                    exitBombSow(index);
                    return false;
                }
            });
        }
        function hotelAdStandard7(hotelAdStandard,hotelAdStandardId){
            var value = hotelAdStandardId.substring(4);
            $("#hotelAdStandardId").val(value);
            $("#hotelAdStandard").val(hotelAdStandard);
        }

    </script>
